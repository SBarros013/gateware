@page
@model IndexModel
@{
    ViewData["Title"] = "Questão 4";
}

<div class="container">
    <div class="d-flex flex-column align-items-center">
        <form>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" placeholder="Nome">
            </div>
            <div class="form-group">
                <label for="sobrenome">Sobrenome</label>
                <input type="text" class="form-control" id="sobrenome" placeholder="Sobrenome">
            </div>
            <div class="form-group">
                <label for="idade">Idade</label>
                <input type="number" class="form-control" id="idade" placeholder="Idade">
            </div>
            <div class="form-group">
                <label for="cidade">Cidade</label>
                <select class="form-control" name="cidade" id="cidade">
                    <option disabled selected value="">Selecione</option>
                    <option value="1">Santos</option>
                    <option value="2">Curitiba</option>
                    <option value="3">São Paulo</option>
                </select>
            </div>
        </form>
        <button id="seed" class="btn btn-primary btn-rounded">Preencher Informações</button>
    </div>
</div>

@section Scripts {
<script>
    $("#seed").click(function() {
        $.ajax(
        {
            url: "informations.json", 
            success: function(result) {
                $("#nome").val(result.nome);
                $("#sobrenome").val(result.sobrenome);
                $("#idade").val(result.idade);
                $("#cidade").val(result.cidade);
            }
        });
    });
</script>
}
